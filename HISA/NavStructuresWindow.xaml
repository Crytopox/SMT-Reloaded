<Window x:Class="HISA.NavStructuresWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Navigation Structures" Height="720" Width="1020"
        WindowStartupLocation="CenterOwner" ResizeMode="CanResize"
        Background="{DynamicResource UiBackgroundBrush}"
        Loaded="Window_Loaded">

    <Grid Margin="18">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Style="{StaticResource CardBorderStyle}" Padding="16" Margin="0,0,0,14">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <StackPanel>
                    <TextBlock Text="Navigation Structures" Style="{StaticResource TitleTextStyle}" />
                    <TextBlock Text="Manage Ansiblex gates in one place." Style="{StaticResource SubtitleTextStyle}" />
                </StackPanel>

                <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Top">
                    <Button x:Name="SaveJumpGatesBtn" Content="Save" Style="{StaticResource GoldButtonStyle}" Margin="0,0,8,0" Click="SaveJumpGatesBtn_Click" />
                    <Button x:Name="CloseButton" Content="Close" Style="{StaticResource GhostButtonStyle}" Click="CloseButton_Click" />
                </StackPanel>
            </Grid>
        </Border>

        <Border Grid.Row="1" Style="{StaticResource CardBorderStyle}" Padding="14">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <TextBlock Text="Ansiblex Gates" Style="{StaticResource SectionHeaderTextStyle}" />

                <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,8,0,10">
                    <TextBlock Text="Search" Style="{StaticResource FieldLabelTextStyle}" VerticalAlignment="Center" Margin="0,0,10,0" />
                    <TextBox x:Name="GateSearchFilter" Style="{StaticResource ModernTextBoxStyle}" Width="240" TextChanged="GateSearchFilter_TextChanged" />
                    <TextBlock Text="Type a system name (from or to)." Style="{StaticResource CaptionTextStyle}" Margin="12,6,0,0" />
                </StackPanel>

                <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0,0,0,10">
                    <Button x:Name="ImportJumpGatesBtn" Content="Find Gates" Style="{StaticResource GoldButtonStyle}" Margin="0,0,8,0" Click="FindJumpGatesBtn_Click" />
                    <Button x:Name="ImportPasteJumpGatesBtn" Content="Import Clipboard" Style="{StaticResource GhostButtonStyle}" Margin="0,0,8,0" Click="ImportPasteJumpGatesBtn_Click" />
                    <Button x:Name="ExportJumpGatesBtn" Content="Export" Style="{StaticResource GhostButtonStyle}" Margin="0,0,8,0" Click="ExportJumpGatesBtn_Click" />
                    <Button x:Name="ClearJumpGatesBtn" Content="Clear" Style="{StaticResource DangerButtonStyle}" Click="ClearJumpGatesBtn_Click" />
                    <TextBlock x:Name="AnsiblexSummaryLbl" Style="{StaticResource CaptionTextStyle}" Margin="12,6,0,0" />
                </StackPanel>

                <DataGrid x:Name="JumpBridgeList"
                          Grid.Row="3"
                          Style="{StaticResource ModernDataGridStyle}"
                          AutoGenerateColumns="False"
                          AreRowDetailsFrozen="True"
                          IsReadOnly="True"
                          SelectionUnit="FullRow">

                    <DataGrid.CellStyle>
                        <Style TargetType="{x:Type DataGridCell}">
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding FromID}" Value="0">
                                    <Setter Property="Background" Value="{StaticResource UiGoldSoftBrush}" />
                                </DataTrigger>
                                <DataTrigger Binding="{Binding ToID}" Value="0">
                                    <Setter Property="Background" Value="{StaticResource UiGoldSoftBrush}" />
                                </DataTrigger>
                                <DataTrigger Binding="{Binding Disabled}" Value="True">
                                    <Setter Property="Background" Value="{StaticResource UiDangerBrush}" />
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </DataGrid.CellStyle>

                    <DataGrid.ContextMenu>
                        <ContextMenu>
                            <MenuItem Header="Delete" Click="DeleteJumpGateMenuItem_Click" />
                            <MenuItem Header="Enable/Disable" Click="EnableDisableJumpGateMenuItem_Click" />
                        </ContextMenu>
                    </DataGrid.ContextMenu>

                    <DataGrid.Columns>
                        <DataGridTextColumn Header="From" Binding="{Binding From}" Width="*" />
                        <DataGridTextColumn Header="To" Binding="{Binding To}" Width="*" />
                    </DataGrid.Columns>
                </DataGrid>
            </Grid>
        </Border>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,12,0,0">
            <Button Content="Close" Style="{StaticResource GhostButtonStyle}" Click="CloseButton_Click" />
        </StackPanel>
    </Grid>
</Window>
