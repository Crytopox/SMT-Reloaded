<Window x:Class="HISA.InfrastructureUpgradeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="SOV Infrastructure Upgrades" Height="760" Width="1180"
        WindowStartupLocation="CenterOwner" ResizeMode="CanResize"
        Background="{DynamicResource UiBackgroundBrush}"
        Loaded="Window_Loaded">

    <Grid Margin="18">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Style="{StaticResource CardBorderStyle}" Padding="16" Margin="0,0,0,14">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <StackPanel>
                    <TextBlock Text="SOV Infrastructure Upgrades" Style="{StaticResource TitleTextStyle}" />
                    <TextBlock Text="Manage, import, and export upgrades in one place." Style="{StaticResource SubtitleTextStyle}" />
                    <TextBlock x:Name="AutoSavePathText" Style="{StaticResource CaptionTextStyle}" />
                </StackPanel>

                <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Top">
                    <Button x:Name="LoadFileButton" Content="Load File" Style="{StaticResource GhostButtonStyle}" Margin="0,0,8,0" Click="LoadFileButton_Click" />
                    <Button x:Name="SaveFileButton" Content="Save File" Style="{StaticResource GhostButtonStyle}" Margin="0,0,8,0" Click="SaveFileButton_Click" />
                    <Button x:Name="ClearAllUpgradesButton" Content="Clear All" Style="{StaticResource DangerButtonStyle}" Click="ClearAllUpgradesButton_Click" />
                </StackPanel>
            </Grid>
        </Border>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="3*" />
                <ColumnDefinition Width="2*" />
            </Grid.ColumnDefinitions>

            <Border Grid.Column="0" Style="{StaticResource CardBorderStyle}" Padding="14" Margin="0,0,12,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <TextBlock Text="Manage By System" Style="{StaticResource SectionHeaderTextStyle}" />

                    <StackPanel Grid.Row="1" Margin="0,8,0,12">
                        <TextBlock Text="System" Style="{StaticResource FieldLabelTextStyle}" />
                        <ComboBox x:Name="SystemComboBox" Style="{StaticResource ComboInputStyle}" SelectionChanged="SystemComboBox_SelectionChanged" IsEditable="True" IsTextSearchEnabled="True" />
                    </StackPanel>

                    <Grid Grid.Row="2">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="*" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>

                        <TextBlock Text="Current Upgrades" Style="{StaticResource SubsectionHeaderTextStyle}" Margin="0,0,0,8" />

                        <DataGrid x:Name="UpgradesDataGrid"
                                  Grid.Row="1"
                                  Style="{StaticResource ModernDataGridStyle}"
                                  AutoGenerateColumns="False"
                                  CanUserAddRows="False"
                                  SelectionMode="Single"
                                  Margin="0,0,0,10">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Slot" Binding="{Binding SlotNumber}" Width="60" IsReadOnly="True" />
                                <DataGridTextColumn Header="Upgrade Name" Binding="{Binding UpgradeName}" Width="*" IsReadOnly="True" />
                                <DataGridTextColumn Header="Level" Binding="{Binding Level}" Width="60" IsReadOnly="True" />
                                <DataGridCheckBoxColumn Header="Online" Binding="{Binding IsOnline}" Width="70" IsReadOnly="True"/>
                            </DataGrid.Columns>
                        </DataGrid>

                        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
                            <Button x:Name="DeleteUpgradeButton" Content="Delete Selected" Style="{StaticResource GhostButtonStyle}" Click="DeleteUpgradeButton_Click" />
                        </StackPanel>
                    </Grid>

                    <Border Grid.Row="3" Background="{DynamicResource UiSurfaceAltBrush}" BorderBrush="{DynamicResource UiStrokeBrush}" BorderThickness="1" CornerRadius="8" Padding="12" Margin="0,6,0,0">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="160" />
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>

                            <TextBlock Grid.Row="0" Grid.Column="0" Text="Slot" Style="{StaticResource FieldLabelTextStyle}" VerticalAlignment="Center" Margin="0,0,8,0" />
                            <ComboBox x:Name="SlotComboBox" Grid.Row="0" Grid.Column="1" Style="{StaticResource ComboInputStyle}">
                                <ComboBoxItem Content="1"/>
                                <ComboBoxItem Content="2"/>
                                <ComboBoxItem Content="3"/>
                                <ComboBoxItem Content="4"/>
                                <ComboBoxItem Content="5"/>
                                <ComboBoxItem Content="6"/>
                                <ComboBoxItem Content="7"/>
                                <ComboBoxItem Content="8"/>
                                <ComboBoxItem Content="9"/>
                                <ComboBoxItem Content="10"/>
                            </ComboBox>

                            <TextBlock Grid.Row="0" Grid.Column="2" Text="Upgrade" Style="{StaticResource FieldLabelTextStyle}" VerticalAlignment="Center" Margin="14,0,8,0" />
                            <ComboBox x:Name="UpgradeTypeComboBox" Grid.Row="0" Grid.Column="3" Style="{StaticResource ComboInputStyle}" Margin="0">
                                <ComboBoxItem Content="Major Threat Detection Array"/>
                                <ComboBoxItem Content="Minor Threat Detection Array"/>
                                <ComboBoxItem Content="Power Monitoring Division"/>
                                <ComboBoxItem Content="Pyerite Prospecting Array"/>
                                <ComboBoxItem Content="Nocxium Prospecting Array"/>
                                <ComboBoxItem Content="Mexallon Prospecting Array"/>
                                <ComboBoxItem Content="Isogen Prospecting Array" />
                                <ComboBoxItem Content="Zydrine Prospecting Array"/>
                                <ComboBoxItem Content="Megacyte Prospecting Array"/>
                                <ComboBoxItem Content="Morphite Prospecting Array"/>
                                <ComboBoxItem Content="Advanced Logistics Network"/>
                                <ComboBoxItem Content="Cynosural Navigation"/>
                                <ComboBoxItem Content="Cynosural Suppression"/>
                                <ComboBoxItem Content="Supercapital Construction Facilities"/>
                                <ComboBoxItem Content="Clone Vat Bay"/>
                            </ComboBox>

                            <TextBlock Grid.Row="1" Grid.Column="0" Text="Level" Style="{StaticResource FieldLabelTextStyle}" VerticalAlignment="Center" Margin="0,8,8,0" />
                            <ComboBox x:Name="LevelComboBox" Grid.Row="1" Grid.Column="1" Style="{StaticResource ComboInputStyle}" Margin="0,6,8,0">
                                <ComboBoxItem Content="0"/>
                                <ComboBoxItem Content="1"/>
                                <ComboBoxItem Content="2"/>
                                <ComboBoxItem Content="3"/>
                            </ComboBox>

                            <CheckBox x:Name="OnlineCheckBox" Grid.Row="1" Grid.Column="2" Grid.ColumnSpan="2" Content="Online" Margin="14,6,0,0" IsChecked="True" Foreground="{DynamicResource UiTextPrimaryBrush}" />

                            <Button x:Name="AddUpdateButton" Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="4" Content="Add Upgrade" Style="{StaticResource GoldButtonStyle}" Margin="0,10,0,0" HorizontalAlignment="Left" Click="AddUpdateButton_Click" />
                        </Grid>
                    </Border>
                </Grid>
            </Border>

            <Grid Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <Border Grid.Row="0" Style="{StaticResource CardBorderStyle}" Padding="14" Margin="0,0,0,12">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>

                        <TextBlock Text="All Upgrades" Style="{StaticResource SectionHeaderTextStyle}" Margin="0,0,0,8" />

                        <DataGrid x:Name="AllUpgradesDataGrid"
                                  Grid.Row="1"
                                  Style="{StaticResource ModernDataGridStyle}"
                                  AutoGenerateColumns="False"
                                  CanUserAddRows="False"
                                  SelectionMode="Single">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="System" Binding="{Binding SystemName}" Width="140" IsReadOnly="True" />
                                <DataGridTextColumn Header="Slot" Binding="{Binding SlotNumber}" Width="60" IsReadOnly="True" />
                                <DataGridTextColumn Header="Upgrade Name" Binding="{Binding UpgradeName}" Width="*" IsReadOnly="True" />
                                <DataGridTextColumn Header="Level" Binding="{Binding Level}" Width="60" IsReadOnly="True" />
                                <DataGridCheckBoxColumn Header="Online" Binding="{Binding IsOnline}" Width="70" IsReadOnly="True"/>
                            </DataGrid.Columns>
                        </DataGrid>
                    </Grid>
                </Border>

                <Border Grid.Row="1" Style="{StaticResource CardBorderStyle}" Padding="14">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="*" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>

                        <TextBlock Text="Import &amp; Export" Style="{StaticResource SectionHeaderTextStyle}" />
                        <TextBlock Grid.Row="1" Text="Supports Rift format: SYSTEM &lt;- Upgrade Name 3, Another Upgrade 2" Style="{StaticResource CaptionTextStyle}" Margin="0,4,0,10" />

                        <TextBox x:Name="ImportTextBox"
                                 Grid.Row="2"
                                 Style="{StaticResource ModernTextBoxStyle}"
                                 AcceptsReturn="True"
                                 VerticalScrollBarVisibility="Auto"
                                 HorizontalScrollBarVisibility="Auto"
                                 TextWrapping="NoWrap"
                                 FontFamily="Consolas"
                                 MinHeight="140" />

                        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
                            <Button Content="Paste Clipboard" Style="{StaticResource GhostButtonStyle}" Margin="0,0,8,0" Click="PasteClipboardButton_Click" />
                            <Button Content="Clear Text" Style="{StaticResource GhostButtonStyle}" Margin="0,0,8,0" Click="ClearImportTextButton_Click" />
                            <Button Content="Import Text" Style="{StaticResource GoldButtonStyle}" Click="ImportTextButton_Click" />
                        </StackPanel>
                    </Grid>
                </Border>
            </Grid>
        </Grid>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,12,0,0">
            <Button x:Name="CloseButton" Content="Close" Style="{StaticResource GhostButtonStyle}" Click="CloseButton_Click" />
        </StackPanel>
    </Grid>
</Window>
