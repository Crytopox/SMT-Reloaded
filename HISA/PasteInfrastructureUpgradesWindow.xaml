<Window x:Class="HISA.PasteInfrastructureUpgradesWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Paste Infrastructure Upgrades"
        Height="460"
        Width="700"
        MinHeight="380"
        MinWidth="560"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResizeWithGrip"
        Background="{DynamicResource UiBackgroundBrush}"
        Style="{StaticResource ModernWindowStyle}">
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Style="{StaticResource CardBorderStyle}" Padding="12" Margin="0,0,0,10">
            <StackPanel>
                <TextBlock Text="Paste Infrastructure Upgrades" Style="{StaticResource SectionHeaderTextStyle}" />
                <TextBlock Text="Paste upgrade rows below in Rift format: SYSTEM &lt;- Upgrade Name 3, Another Upgrade 2"
                           Margin="0,6,0,0"
                           Foreground="{DynamicResource UiTextMutedBrush}" />
            </StackPanel>
        </Border>

        <TextBox x:Name="PasteTextBox"
                 Grid.Row="1"
                 Style="{StaticResource ModernTextBoxStyle}"
                 AcceptsReturn="True"
                 VerticalScrollBarVisibility="Auto"
                 HorizontalScrollBarVisibility="Auto"
                 TextWrapping="NoWrap"
                 FontFamily="Consolas"
                 ToolTip="Supports Rift format: SYSTEM &lt;- Upgrade Name 3, Another Upgrade 2"
                 Padding="10" />

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,12,0,0">
            <Button Content="Import" Width="90" Margin="0,0,8,0" Click="Import_Click" Style="{StaticResource GoldButtonStyle}" />
            <Button Content="Cancel" Width="90" IsCancel="True" Style="{StaticResource GhostButtonStyle}" />
        </StackPanel>
    </Grid>
</Window>
