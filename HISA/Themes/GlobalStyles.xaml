<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Palette -->
    <Color x:Key="UiBackgroundColor">#151515</Color>
    <Color x:Key="UiSurfaceColor">#1E1E1E</Color>
    <Color x:Key="UiSurfaceAltColor">#242424</Color>
    <Color x:Key="UiStrokeColor">#2D2D2D</Color>
    <Color x:Key="UiTextPrimaryColor">#F2F2F2</Color>
    <Color x:Key="UiTextMutedColor">#B7B7B7</Color>
    <Color x:Key="UiGoldColor">#D7B35C</Color>
    <Color x:Key="UiGoldHoverColor">#E2C576</Color>
    <Color x:Key="UiGoldSoftColor">#3A2D16</Color>
    <Color x:Key="UiDangerColor">#C85757</Color>
    <Color x:Key="UiDangerHoverColor">#D86A6A</Color>

    <!-- Brushes -->
    <SolidColorBrush x:Key="UiBackgroundBrush" Color="{StaticResource UiBackgroundColor}" />
    <SolidColorBrush x:Key="UiSurfaceBrush" Color="{StaticResource UiSurfaceColor}" />
    <SolidColorBrush x:Key="UiSurfaceAltBrush" Color="{StaticResource UiSurfaceAltColor}" />
    <SolidColorBrush x:Key="UiStrokeBrush" Color="{StaticResource UiStrokeColor}" />
    <SolidColorBrush x:Key="UiTextPrimaryBrush" Color="{StaticResource UiTextPrimaryColor}" />
    <SolidColorBrush x:Key="UiTextMutedBrush" Color="{StaticResource UiTextMutedColor}" />
    <SolidColorBrush x:Key="UiGoldBrush" Color="{StaticResource UiGoldColor}" />
    <SolidColorBrush x:Key="UiGoldHoverBrush" Color="{StaticResource UiGoldHoverColor}" />
    <SolidColorBrush x:Key="UiGoldSoftBrush" Color="{StaticResource UiGoldSoftColor}" />
    <SolidColorBrush x:Key="UiDangerBrush" Color="{StaticResource UiDangerColor}" />
    <SolidColorBrush x:Key="UiDangerHoverBrush" Color="{StaticResource UiDangerHoverColor}" />

    <!-- Typography -->
    <Style x:Key="TitleTextStyle" TargetType="TextBlock">
        <Setter Property="FontSize" Value="22" />
        <Setter Property="FontWeight" Value="SemiBold" />
        <Setter Property="Foreground" Value="{StaticResource UiTextPrimaryBrush}" />
    </Style>

    <Style x:Key="SubtitleTextStyle" TargetType="TextBlock">
        <Setter Property="FontSize" Value="12" />
        <Setter Property="Foreground" Value="{StaticResource UiTextMutedBrush}" />
        <Setter Property="Margin" Value="0,4,0,0" />
    </Style>

    <Style x:Key="SectionHeaderTextStyle" TargetType="TextBlock">
        <Setter Property="FontSize" Value="15" />
        <Setter Property="FontWeight" Value="SemiBold" />
        <Setter Property="Foreground" Value="{StaticResource UiTextPrimaryBrush}" />
    </Style>

    <Style x:Key="SubsectionHeaderTextStyle" TargetType="TextBlock">
        <Setter Property="FontSize" Value="13" />
        <Setter Property="FontWeight" Value="SemiBold" />
        <Setter Property="Foreground" Value="{StaticResource UiTextPrimaryBrush}" />
    </Style>

    <Style x:Key="FieldLabelTextStyle" TargetType="TextBlock">
        <Setter Property="FontSize" Value="11" />
        <Setter Property="FontWeight" Value="SemiBold" />
        <Setter Property="Foreground" Value="{StaticResource UiTextMutedBrush}" />
        <Setter Property="Margin" Value="0,0,0,4" />
    </Style>

    <Style x:Key="CaptionTextStyle" TargetType="TextBlock">
        <Setter Property="FontSize" Value="11" />
        <Setter Property="Foreground" Value="{StaticResource UiTextMutedBrush}" />
    </Style>

    <!-- Card -->
    <Style x:Key="CardBorderStyle" TargetType="Border">
        <Setter Property="Background" Value="{StaticResource UiSurfaceBrush}" />
        <Setter Property="BorderBrush" Value="{StaticResource UiStrokeBrush}" />
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="CornerRadius" Value="10" />
    </Style>

    <!-- Buttons -->
    <Style x:Key="GoldButtonStyle" TargetType="Button">
        <Setter Property="Background" Value="{StaticResource UiGoldBrush}" />
        <Setter Property="BorderBrush" Value="{StaticResource UiGoldBrush}" />
        <Setter Property="Foreground" Value="{StaticResource UiBackgroundBrush}" />
        <Setter Property="Padding" Value="14,8" />
        <Setter Property="FontWeight" Value="SemiBold" />
        <Setter Property="Cursor" Value="Hand" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border x:Name="Bd"
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="1"
                            CornerRadius="6"
                            Padding="{TemplateBinding Padding}">
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="Bd" Property="Background" Value="{StaticResource UiGoldHoverBrush}" />
                            <Setter TargetName="Bd" Property="BorderBrush" Value="{StaticResource UiGoldHoverBrush}" />
                        </Trigger>
                        <Trigger Property="IsPressed" Value="True">
                            <Setter TargetName="Bd" Property="Background" Value="{StaticResource UiGoldSoftBrush}" />
                            <Setter TargetName="Bd" Property="BorderBrush" Value="{StaticResource UiGoldSoftBrush}" />
                            <Setter Property="Foreground" Value="{StaticResource UiGoldBrush}" />
                        </Trigger>
                        <Trigger Property="IsEnabled" Value="False">
                            <Setter TargetName="Bd" Property="Opacity" Value="0.5" />
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style x:Key="GhostButtonStyle" TargetType="Button">
        <Setter Property="Background" Value="Transparent" />
        <Setter Property="BorderBrush" Value="{StaticResource UiStrokeBrush}" />
        <Setter Property="Foreground" Value="{StaticResource UiTextPrimaryBrush}" />
        <Setter Property="Padding" Value="12,8" />
        <Setter Property="Cursor" Value="Hand" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border x:Name="Bd"
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="1"
                            CornerRadius="6"
                            Padding="{TemplateBinding Padding}">
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="Bd" Property="BorderBrush" Value="{StaticResource UiGoldBrush}" />
                            <Setter Property="Foreground" Value="{StaticResource UiGoldBrush}" />
                        </Trigger>
                        <Trigger Property="IsPressed" Value="True">
                            <Setter TargetName="Bd" Property="Background" Value="{StaticResource UiGoldSoftBrush}" />
                            <Setter TargetName="Bd" Property="BorderBrush" Value="{StaticResource UiGoldBrush}" />
                            <Setter Property="Foreground" Value="{StaticResource UiGoldBrush}" />
                        </Trigger>
                        <Trigger Property="IsEnabled" Value="False">
                            <Setter TargetName="Bd" Property="Opacity" Value="0.5" />
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style x:Key="DangerButtonStyle" TargetType="Button">
        <Setter Property="Background" Value="{StaticResource UiDangerBrush}" />
        <Setter Property="BorderBrush" Value="{StaticResource UiDangerBrush}" />
        <Setter Property="Foreground" Value="{StaticResource UiTextPrimaryBrush}" />
        <Setter Property="Padding" Value="12,8" />
        <Setter Property="FontWeight" Value="SemiBold" />
        <Setter Property="Cursor" Value="Hand" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border x:Name="Bd"
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="1"
                            CornerRadius="6"
                            Padding="{TemplateBinding Padding}">
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="Bd" Property="Background" Value="{StaticResource UiDangerHoverBrush}" />
                            <Setter TargetName="Bd" Property="BorderBrush" Value="{StaticResource UiDangerHoverBrush}" />
                        </Trigger>
                        <Trigger Property="IsPressed" Value="True">
                            <Setter TargetName="Bd" Property="Opacity" Value="0.85" />
                        </Trigger>
                        <Trigger Property="IsEnabled" Value="False">
                            <Setter TargetName="Bd" Property="Opacity" Value="0.5" />
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- Inputs -->
    <Style x:Key="ModernTextBoxStyle" TargetType="TextBox">
        <Setter Property="Background" Value="{StaticResource UiSurfaceAltBrush}" />
        <Setter Property="BorderBrush" Value="{StaticResource UiStrokeBrush}" />
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="Foreground" Value="{StaticResource UiTextPrimaryBrush}" />
        <Setter Property="Padding" Value="10" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="TextBox">
                    <Border x:Name="Bd"
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="6">
                        <ScrollViewer x:Name="PART_ContentHost" Margin="{TemplateBinding Padding}" />
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsKeyboardFocused" Value="True">
                            <Setter TargetName="Bd" Property="BorderBrush" Value="{StaticResource UiGoldBrush}" />
                        </Trigger>
                        <Trigger Property="IsEnabled" Value="False">
                            <Setter TargetName="Bd" Property="Opacity" Value="0.6" />
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style x:Key="ComboInputStyle" TargetType="ComboBox">
        <Setter Property="Background" Value="{StaticResource UiSurfaceAltBrush}" />
        <Setter Property="BorderBrush" Value="{StaticResource UiStrokeBrush}" />
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="Foreground" Value="{StaticResource UiTextPrimaryBrush}" />
        <Setter Property="Padding" Value="8,4" />
        <Setter Property="MinHeight" Value="30" />
    </Style>

    <!-- DataGrid -->
    <Style x:Key="ModernDataGridStyle" TargetType="DataGrid">
        <Setter Property="Background" Value="{StaticResource UiSurfaceAltBrush}" />
        <Setter Property="Foreground" Value="{StaticResource UiTextPrimaryBrush}" />
        <Setter Property="BorderBrush" Value="{StaticResource UiStrokeBrush}" />
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="RowBackground" Value="{StaticResource UiSurfaceAltBrush}" />
        <Setter Property="AlternatingRowBackground" Value="{StaticResource UiSurfaceBrush}" />
        <Setter Property="HeadersVisibility" Value="Column" />
        <Setter Property="GridLinesVisibility" Value="Horizontal" />
    </Style>
</ResourceDictionary>
