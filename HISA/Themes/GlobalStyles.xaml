<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:shell="clr-namespace:System.Windows.Shell;assembly=PresentationFramework"
                    xmlns:local="clr-namespace:HISA">

    <!-- Palette -->
    <Color x:Key="UiBackgroundColor">#101925</Color>
    <Color x:Key="UiBackgroundTopColor">#19283D</Color>
    <Color x:Key="UiBackgroundBottomColor">#0F1722</Color>
    <Color x:Key="UiSurfaceColor">#C1223348</Color>
    <Color x:Key="UiSurfaceAltColor">#A1263A55</Color>
    <Color x:Key="UiStrokeColor">#395677</Color>
    <Color x:Key="UiStrokeSoftColor">#2A3F5B</Color>
    <Color x:Key="UiTextPrimaryColor">#EAF4FF</Color>
    <Color x:Key="UiTextMutedColor">#A7BCD4</Color>
    <Color x:Key="UiTextLabelColor">#C7DAEE</Color>
    <Color x:Key="UiGoldColor">#62AFFF</Color>
    <Color x:Key="UiGoldHoverColor">#86C2FF</Color>
    <Color x:Key="UiGoldSoftColor">#2A4263</Color>
    <Color x:Key="UiDangerColor">#C96272</Color>
    <Color x:Key="UiDangerHoverColor">#D87988</Color>

    <!-- Brushes -->
    <LinearGradientBrush x:Key="UiBackgroundBrush" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Color="{StaticResource UiBackgroundTopColor}" Offset="0" />
        <GradientStop Color="{StaticResource UiBackgroundBottomColor}" Offset="1" />
    </LinearGradientBrush>
    <LinearGradientBrush x:Key="UiTitleBarBrush" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="#CC22344C" Offset="0" />
        <GradientStop Color="#CC1A2A3F" Offset="1" />
    </LinearGradientBrush>
    <SolidColorBrush x:Key="UiSurfaceBrush" Color="{StaticResource UiSurfaceColor}" />
    <SolidColorBrush x:Key="UiSurfaceAltBrush" Color="{StaticResource UiSurfaceAltColor}" />
    <SolidColorBrush x:Key="UiStrokeBrush" Color="{StaticResource UiStrokeColor}" />
    <SolidColorBrush x:Key="UiStrokeSoftBrush" Color="{StaticResource UiStrokeSoftColor}" />
    <SolidColorBrush x:Key="UiTextPrimaryBrush" Color="{StaticResource UiTextPrimaryColor}" />
    <SolidColorBrush x:Key="UiTextMutedBrush" Color="{StaticResource UiTextMutedColor}" />
    <SolidColorBrush x:Key="UiTextLabelBrush" Color="{StaticResource UiTextLabelColor}" />
    <SolidColorBrush x:Key="UiGoldBrush" Color="{StaticResource UiGoldColor}" />
    <SolidColorBrush x:Key="UiGoldHoverBrush" Color="{StaticResource UiGoldHoverColor}" />
    <SolidColorBrush x:Key="UiGoldSoftBrush" Color="{StaticResource UiGoldSoftColor}" />
    <SolidColorBrush x:Key="UiDangerBrush" Color="{StaticResource UiDangerColor}" />
    <SolidColorBrush x:Key="UiDangerHoverBrush" Color="{StaticResource UiDangerHoverColor}" />
    <SolidColorBrush x:Key="UiControlHoverBrush" Color="#2D4663" />
    <SolidColorBrush x:Key="UiSelectionBrush" Color="#3A5D84" />
    <SolidColorBrush x:Key="UiSelectionTextBrush" Color="{StaticResource UiTextPrimaryColor}" />

    <!-- Window chrome -->
    <Style x:Key="WindowTitleBarButtonStyle" TargetType="Button">
        <Setter Property="Width" Value="40" />
        <Setter Property="Height" Value="30" />
        <Setter Property="Background" Value="Transparent" />
        <Setter Property="BorderBrush" Value="Transparent" />
        <Setter Property="BorderThickness" Value="0" />
        <Setter Property="Foreground" Value="{StaticResource UiTextMutedBrush}" />
        <Setter Property="FontSize" Value="12" />
        <Setter Property="FontWeight" Value="SemiBold" />
        <Setter Property="Padding" Value="0" />
        <Setter Property="Cursor" Value="Hand" />
        <Setter Property="shell:WindowChrome.IsHitTestVisibleInChrome" Value="True" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border x:Name="Bd"
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}">
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="Bd" Property="Background" Value="{StaticResource UiSurfaceAltBrush}" />
                            <Setter Property="Foreground" Value="{StaticResource UiTextPrimaryBrush}" />
                            <Setter TargetName="Bd" Property="BorderBrush" Value="{StaticResource UiStrokeBrush}" />
                            <Setter TargetName="Bd" Property="BorderThickness" Value="1" />
                        </Trigger>
                        <Trigger Property="IsPressed" Value="True">
                            <Setter TargetName="Bd" Property="Opacity" Value="0.85" />
                        </Trigger>
                        <Trigger Property="IsEnabled" Value="False">
                            <Setter TargetName="Bd" Property="Opacity" Value="0.35" />
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style x:Key="WindowTitleBarCloseButtonStyle" TargetType="Button" BasedOn="{StaticResource WindowTitleBarButtonStyle}">
        <Setter Property="Foreground" Value="{StaticResource UiTextPrimaryBrush}" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border x:Name="Bd"
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}">
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="Bd" Property="Background" Value="{StaticResource UiDangerBrush}" />
                            <Setter Property="Foreground" Value="{StaticResource UiTextPrimaryBrush}" />
                        </Trigger>
                        <Trigger Property="IsPressed" Value="True">
                            <Setter TargetName="Bd" Property="Background" Value="{StaticResource UiDangerHoverBrush}" />
                        </Trigger>
                        <Trigger Property="IsEnabled" Value="False">
                            <Setter TargetName="Bd" Property="Opacity" Value="0.35" />
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style x:Key="ModernWindowStyle" TargetType="Window">
        <Setter Property="WindowStyle" Value="None" />
        <Setter Property="BorderBrush" Value="{StaticResource UiStrokeBrush}" />
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="Background" Value="{StaticResource UiBackgroundBrush}" />
        <Setter Property="Foreground" Value="{StaticResource UiTextPrimaryBrush}" />
        <Setter Property="shell:WindowChrome.WindowChrome">
            <Setter.Value>
                <shell:WindowChrome CaptionHeight="30"
                                    ResizeBorderThickness="6"
                                    GlassFrameThickness="0"
                                    CornerRadius="0"
                                    UseAeroCaptionButtons="False" />
            </Setter.Value>
        </Setter>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type Window}">
                    <Border x:Name="OuterBorder"
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            SnapsToDevicePixels="True">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="30" />
                                <RowDefinition Height="*" />
                            </Grid.RowDefinitions>

                            <Grid Grid.Row="0" Background="{StaticResource UiTitleBarBrush}">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>

                                <DockPanel Grid.Column="0" Margin="10,0,0,0" VerticalAlignment="Center">
                                    <TextBlock Text="{TemplateBinding Title}"
                                               Foreground="{StaticResource UiTextPrimaryBrush}"
                                               FontSize="11"
                                               FontWeight="SemiBold"
                                               VerticalAlignment="Center" />
                                </DockPanel>

                                <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right">
                                    <Button x:Name="MinButton"
                                            Style="{StaticResource WindowTitleBarButtonStyle}"
                                            shell:WindowChrome.IsHitTestVisibleInChrome="True"
                                            Content="&#x2013;"
                                            Command="{x:Static local:WindowChromeCommands.Minimize}"
                                            CommandParameter="{Binding RelativeSource={RelativeSource TemplatedParent}}" />
                                    <Button x:Name="MaxButton"
                                            Style="{StaticResource WindowTitleBarButtonStyle}"
                                            shell:WindowChrome.IsHitTestVisibleInChrome="True"
                                            Content="&#x25A1;"
                                            Command="{x:Static local:WindowChromeCommands.Maximize}"
                                            CommandParameter="{Binding RelativeSource={RelativeSource TemplatedParent}}" />
                                    <Button x:Name="RestoreButton"
                                            Style="{StaticResource WindowTitleBarButtonStyle}"
                                            shell:WindowChrome.IsHitTestVisibleInChrome="True"
                                            Content="&#x2750;"
                                            Visibility="Collapsed"
                                            Command="{x:Static local:WindowChromeCommands.Restore}"
                                            CommandParameter="{Binding RelativeSource={RelativeSource TemplatedParent}}" />
                                    <Button x:Name="CloseButton"
                                            Style="{StaticResource WindowTitleBarCloseButtonStyle}"
                                            shell:WindowChrome.IsHitTestVisibleInChrome="True"
                                            Content="X"
                                            Command="{x:Static local:WindowChromeCommands.Close}"
                                            CommandParameter="{Binding RelativeSource={RelativeSource TemplatedParent}}" />
                                </StackPanel>
                            </Grid>

                            <AdornerDecorator Grid.Row="1">
                                <ContentPresenter />
                            </AdornerDecorator>
                        </Grid>
                    </Border>

                    <ControlTemplate.Triggers>
                        <Trigger Property="WindowState" Value="Maximized">
                            <Setter TargetName="OuterBorder" Property="BorderThickness" Value="0" />
                            <Setter TargetName="MaxButton" Property="Visibility" Value="Collapsed" />
                            <Setter TargetName="RestoreButton" Property="Visibility" Value="Visible" />
                        </Trigger>
                        <Trigger Property="ResizeMode" Value="CanMinimize">
                            <Setter TargetName="MaxButton" Property="Visibility" Value="Collapsed" />
                            <Setter TargetName="RestoreButton" Property="Visibility" Value="Collapsed" />
                        </Trigger>
                        <Trigger Property="ResizeMode" Value="NoResize">
                            <Setter TargetName="MinButton" Property="Visibility" Value="Collapsed" />
                            <Setter TargetName="MaxButton" Property="Visibility" Value="Collapsed" />
                            <Setter TargetName="RestoreButton" Property="Visibility" Value="Collapsed" />
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- Typography -->
    <Style x:Key="TitleTextStyle" TargetType="TextBlock">
        <Setter Property="FontSize" Value="22" />
        <Setter Property="FontWeight" Value="SemiBold" />
        <Setter Property="Foreground" Value="{StaticResource UiTextPrimaryBrush}" />
    </Style>

    <Style x:Key="SubtitleTextStyle" TargetType="TextBlock">
        <Setter Property="FontSize" Value="12" />
        <Setter Property="Foreground" Value="{StaticResource UiTextMutedBrush}" />
        <Setter Property="Margin" Value="0,4,0,0" />
    </Style>

    <Style x:Key="SectionHeaderTextStyle" TargetType="TextBlock">
        <Setter Property="FontSize" Value="15" />
        <Setter Property="FontWeight" Value="SemiBold" />
        <Setter Property="Foreground" Value="{StaticResource UiTextPrimaryBrush}" />
    </Style>

    <Style x:Key="SubsectionHeaderTextStyle" TargetType="TextBlock">
        <Setter Property="FontSize" Value="13" />
        <Setter Property="FontWeight" Value="SemiBold" />
        <Setter Property="Foreground" Value="{StaticResource UiTextPrimaryBrush}" />
    </Style>

    <Style x:Key="FieldLabelTextStyle" TargetType="TextBlock">
        <Setter Property="FontSize" Value="11" />
        <Setter Property="FontWeight" Value="SemiBold" />
        <Setter Property="Foreground" Value="{StaticResource UiTextLabelBrush}" />
        <Setter Property="Margin" Value="0,0,0,4" />
    </Style>

    <Style x:Key="CaptionTextStyle" TargetType="TextBlock">
        <Setter Property="FontSize" Value="11" />
        <Setter Property="Foreground" Value="{StaticResource UiTextMutedBrush}" />
    </Style>

    <!-- Card -->
    <Style x:Key="CardBorderStyle" TargetType="Border">
        <Setter Property="Background" Value="{StaticResource UiSurfaceAltBrush}" />
        <Setter Property="BorderBrush" Value="{StaticResource UiStrokeBrush}" />
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="CornerRadius" Value="8" />
    </Style>

    <!-- Buttons -->
    <Style x:Key="GoldButtonStyle" TargetType="Button">
        <Setter Property="Background" Value="{StaticResource UiGoldBrush}" />
        <Setter Property="BorderBrush" Value="{StaticResource UiGoldBrush}" />
        <Setter Property="Foreground" Value="{StaticResource UiTextPrimaryBrush}" />
        <Setter Property="Padding" Value="12,6" />
        <Setter Property="FontWeight" Value="SemiBold" />
        <Setter Property="Cursor" Value="Hand" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border x:Name="Bd"
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="1"
                            CornerRadius="5"
                            Padding="{TemplateBinding Padding}">
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="Bd" Property="Background" Value="{StaticResource UiGoldHoverBrush}" />
                            <Setter TargetName="Bd" Property="BorderBrush" Value="{StaticResource UiGoldHoverBrush}" />
                        </Trigger>
                        <Trigger Property="IsPressed" Value="True">
                            <Setter TargetName="Bd" Property="Background" Value="{StaticResource UiGoldSoftBrush}" />
                            <Setter TargetName="Bd" Property="BorderBrush" Value="{StaticResource UiGoldBrush}" />
                            <Setter Property="Foreground" Value="{StaticResource UiTextPrimaryBrush}" />
                        </Trigger>
                        <Trigger Property="IsEnabled" Value="False">
                            <Setter TargetName="Bd" Property="Opacity" Value="0.5" />
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style x:Key="GhostButtonStyle" TargetType="Button">
        <Setter Property="Background" Value="Transparent" />
        <Setter Property="BorderBrush" Value="{StaticResource UiStrokeSoftBrush}" />
        <Setter Property="Foreground" Value="{StaticResource UiTextPrimaryBrush}" />
        <Setter Property="Padding" Value="11,6" />
        <Setter Property="Cursor" Value="Hand" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border x:Name="Bd"
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="1"
                            CornerRadius="5"
                            Padding="{TemplateBinding Padding}">
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="Bd" Property="BorderBrush" Value="{StaticResource UiGoldBrush}" />
                            <Setter TargetName="Bd" Property="Background" Value="#222D4465" />
                            <Setter Property="Foreground" Value="{StaticResource UiGoldBrush}" />
                        </Trigger>
                        <Trigger Property="IsPressed" Value="True">
                            <Setter TargetName="Bd" Property="Background" Value="{StaticResource UiGoldSoftBrush}" />
                            <Setter TargetName="Bd" Property="BorderBrush" Value="{StaticResource UiGoldBrush}" />
                            <Setter Property="Foreground" Value="{StaticResource UiGoldBrush}" />
                        </Trigger>
                        <Trigger Property="IsEnabled" Value="False">
                            <Setter TargetName="Bd" Property="Opacity" Value="0.5" />
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style x:Key="DangerButtonStyle" TargetType="Button">
        <Setter Property="Background" Value="{StaticResource UiDangerBrush}" />
        <Setter Property="BorderBrush" Value="{StaticResource UiDangerBrush}" />
        <Setter Property="Foreground" Value="{StaticResource UiTextPrimaryBrush}" />
        <Setter Property="Padding" Value="11,6" />
        <Setter Property="FontWeight" Value="SemiBold" />
        <Setter Property="Cursor" Value="Hand" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border x:Name="Bd"
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="1"
                            CornerRadius="5"
                            Padding="{TemplateBinding Padding}">
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="Bd" Property="Background" Value="{StaticResource UiDangerHoverBrush}" />
                            <Setter TargetName="Bd" Property="BorderBrush" Value="{StaticResource UiDangerHoverBrush}" />
                        </Trigger>
                        <Trigger Property="IsPressed" Value="True">
                            <Setter TargetName="Bd" Property="Opacity" Value="0.85" />
                        </Trigger>
                        <Trigger Property="IsEnabled" Value="False">
                            <Setter TargetName="Bd" Property="Opacity" Value="0.5" />
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style x:Key="ModernCheckBoxStyle" TargetType="CheckBox">
        <Setter Property="Foreground" Value="{StaticResource UiTextPrimaryBrush}" />
        <Setter Property="FontSize" Value="12" />
        <Setter Property="MinHeight" Value="20" />
        <Setter Property="VerticalAlignment" Value="Center" />
        <Setter Property="Margin" Value="0,2,0,2" />
        <Setter Property="Cursor" Value="Hand" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="CheckBox">
                    <Grid SnapsToDevicePixels="True">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="18" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <Border x:Name="Box"
                                Grid.Column="0"
                                Width="16"
                                Height="16"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Center"
                                CornerRadius="3"
                                Background="{StaticResource UiSurfaceAltBrush}"
                                BorderBrush="{StaticResource UiStrokeSoftBrush}"
                                BorderThickness="1" />

                        <Path x:Name="CheckMark"
                              Grid.Column="0"
                              Data="M 3 8 L 6.5 11.5 L 13 5"
                              Stroke="{StaticResource UiTextPrimaryBrush}"
                              StrokeThickness="1.9"
                              StrokeLineJoin="Round"
                              StrokeStartLineCap="Round"
                              StrokeEndLineCap="Round"
                              HorizontalAlignment="Left"
                              VerticalAlignment="Center"
                              Margin="1,0,0,0"
                              Visibility="Collapsed" />

                        <Rectangle x:Name="IndeterminateMark"
                                   Grid.Column="0"
                                   Width="8"
                                   Height="2"
                                   RadiusX="1"
                                   RadiusY="1"
                                   Fill="{StaticResource UiTextPrimaryBrush}"
                                   HorizontalAlignment="Left"
                                   VerticalAlignment="Center"
                                   Margin="4,0,0,0"
                                   Visibility="Collapsed" />

                        <ContentPresenter Grid.Column="1"
                                          Margin="8,0,0,0"
                                          VerticalAlignment="Center"
                                          HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                          RecognizesAccessKey="True" />
                    </Grid>

                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="Box" Property="BorderBrush" Value="{StaticResource UiStrokeBrush}" />
                            <Setter TargetName="Box" Property="Background" Value="{StaticResource UiControlHoverBrush}" />
                        </Trigger>
                        <Trigger Property="IsKeyboardFocused" Value="True">
                            <Setter TargetName="Box" Property="BorderBrush" Value="{StaticResource UiGoldBrush}" />
                        </Trigger>
                        <Trigger Property="IsChecked" Value="True">
                            <Setter TargetName="Box" Property="Background" Value="{StaticResource UiGoldSoftBrush}" />
                            <Setter TargetName="Box" Property="BorderBrush" Value="{StaticResource UiGoldBrush}" />
                            <Setter TargetName="CheckMark" Property="Visibility" Value="Visible" />
                            <Setter TargetName="IndeterminateMark" Property="Visibility" Value="Collapsed" />
                        </Trigger>
                        <Trigger Property="IsChecked" Value="{x:Null}">
                            <Setter TargetName="Box" Property="Background" Value="{StaticResource UiGoldSoftBrush}" />
                            <Setter TargetName="Box" Property="BorderBrush" Value="{StaticResource UiGoldBrush}" />
                            <Setter TargetName="CheckMark" Property="Visibility" Value="Collapsed" />
                            <Setter TargetName="IndeterminateMark" Property="Visibility" Value="Visible" />
                        </Trigger>
                        <Trigger Property="IsEnabled" Value="False">
                            <Setter Property="Opacity" Value="0.55" />
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style TargetType="CheckBox" BasedOn="{StaticResource ModernCheckBoxStyle}" />

    <Style x:Key="ModernComboBoxItemStyle" TargetType="ComboBoxItem">
        <Setter Property="Foreground" Value="{StaticResource UiTextPrimaryBrush}" />
        <Setter Property="Background" Value="Transparent" />
        <Setter Property="Padding" Value="7,3" />
        <Setter Property="HorizontalContentAlignment" Value="Stretch" />
        <Style.Triggers>
            <Trigger Property="IsHighlighted" Value="True">
                <Setter Property="Background" Value="{StaticResource UiGoldSoftBrush}" />
                <Setter Property="Foreground" Value="{StaticResource UiTextPrimaryBrush}" />
            </Trigger>
            <Trigger Property="IsSelected" Value="True">
                <Setter Property="Background" Value="{StaticResource UiGoldSoftBrush}" />
                <Setter Property="Foreground" Value="{StaticResource UiTextPrimaryBrush}" />
            </Trigger>
            <Trigger Property="IsEnabled" Value="False">
                <Setter Property="Opacity" Value="0.55" />
            </Trigger>
        </Style.Triggers>
    </Style>

    <!-- Inputs -->
    <Style x:Key="ModernTextBoxStyle" TargetType="TextBox">
        <Setter Property="Background" Value="{StaticResource UiSurfaceAltBrush}" />
        <Setter Property="BorderBrush" Value="{StaticResource UiStrokeSoftBrush}" />
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="Foreground" Value="{StaticResource UiTextPrimaryBrush}" />
        <Setter Property="SelectionBrush" Value="{StaticResource UiSelectionBrush}" />
        <Setter Property="SelectionTextBrush" Value="{StaticResource UiSelectionTextBrush}" />
        <Setter Property="CaretBrush" Value="{StaticResource UiTextPrimaryBrush}" />
        <Setter Property="Padding" Value="9" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="TextBox">
                    <Border x:Name="Bd"
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="5">
                        <ScrollViewer x:Name="PART_ContentHost" Margin="{TemplateBinding Padding}" />
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsKeyboardFocused" Value="True">
                            <Setter TargetName="Bd" Property="BorderBrush" Value="{StaticResource UiGoldBrush}" />
                        </Trigger>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="Bd" Property="BorderBrush" Value="{StaticResource UiStrokeBrush}" />
                        </Trigger>
                        <Trigger Property="IsEnabled" Value="False">
                            <Setter TargetName="Bd" Property="Opacity" Value="0.6" />
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style x:Key="ComboInputStyle" TargetType="ComboBox">
        <Style.Resources>
            <SolidColorBrush x:Key="{x:Static SystemColors.WindowBrushKey}" Color="#1C2A3E" />
            <SolidColorBrush x:Key="{x:Static SystemColors.ControlTextBrushKey}" Color="#EAF4FF" />
            <SolidColorBrush x:Key="{x:Static SystemColors.HighlightBrushKey}" Color="#2A4263" />
            <SolidColorBrush x:Key="{x:Static SystemColors.HighlightTextBrushKey}" Color="#EAF4FF" />
        </Style.Resources>
        <Setter Property="Background" Value="{StaticResource UiSurfaceAltBrush}" />
        <Setter Property="BorderBrush" Value="{StaticResource UiStrokeSoftBrush}" />
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="Foreground" Value="{StaticResource UiTextPrimaryBrush}" />
        <Setter Property="ItemContainerStyle" Value="{StaticResource ModernComboBoxItemStyle}" />
        <Setter Property="HorizontalContentAlignment" Value="Stretch" />
        <Setter Property="Padding" Value="6,1" />
        <Setter Property="MinHeight" Value="24" />
        <Setter Property="SnapsToDevicePixels" Value="True" />
        <Setter Property="ScrollViewer.CanContentScroll" Value="True" />
        <Setter Property="MaxDropDownHeight" Value="420" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="ComboBox">
                    <Grid>
                        <Border x:Name="Bd"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="5" />

                        <Grid Margin="0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="24" />
                            </Grid.ColumnDefinitions>

                            <ContentPresenter x:Name="ContentSite"
                                              Grid.Column="0"
                                              Margin="7,0,4,0"
                                              VerticalAlignment="Center"
                                              HorizontalAlignment="Left"
                                              Content="{TemplateBinding SelectionBoxItem}"
                                              ContentTemplate="{TemplateBinding SelectionBoxItemTemplate}"
                                              ContentTemplateSelector="{TemplateBinding ItemTemplateSelector}"
                                              IsHitTestVisible="False"
                                              TextElement.Foreground="{TemplateBinding Foreground}" />

                            <TextBox x:Name="PART_EditableTextBox"
                                     Grid.Column="0"
                                     Margin="6,1,2,1"
                                     BorderThickness="0"
                                     Background="Transparent"
                                     Foreground="{TemplateBinding Foreground}"
                                     CaretBrush="{TemplateBinding Foreground}"
                                     Visibility="Hidden"
                                     Focusable="True"
                                     IsReadOnly="{TemplateBinding IsReadOnly}" />

                            <Border x:Name="ArrowHost"
                                    Grid.Column="1"
                                    Background="#22304A66"
                                    BorderBrush="{TemplateBinding BorderBrush}"
                                    BorderThickness="1,0,0,0">
                                <Path Data="M 0 0 L 4 4 L 8 0 Z"
                                      Width="8"
                                      Height="4"
                                      Stretch="Fill"
                                      Fill="{TemplateBinding Foreground}"
                                      HorizontalAlignment="Center"
                                      VerticalAlignment="Center" />
                            </Border>
                        </Grid>

                        <ToggleButton x:Name="DropDownToggle"
                                      Background="Transparent"
                                      BorderThickness="0"
                                      Focusable="False"
                                      Grid.Column="0"
                                      Grid.ColumnSpan="2"
                                      IsChecked="{Binding IsDropDownOpen, RelativeSource={RelativeSource TemplatedParent}, Mode=TwoWay}"
                                      ClickMode="Press" />

                        <Popup x:Name="Popup"
                               Placement="Bottom"
                               AllowsTransparency="True"
                               Focusable="False"
                               IsOpen="{TemplateBinding IsDropDownOpen}"
                               PopupAnimation="Fade">
                            <Border x:Name="DropDownBorder"
                                    MinWidth="{Binding ActualWidth, RelativeSource={RelativeSource TemplatedParent}}"
                                    Margin="0,2,0,0"
                                    Background="{StaticResource UiSurfaceAltBrush}"
                                    BorderBrush="{StaticResource UiStrokeBrush}"
                                    BorderThickness="1"
                                    CornerRadius="5"
                                    SnapsToDevicePixels="True">
                                <ScrollViewer Margin="2"
                                              CanContentScroll="True"
                                              KeyboardNavigation.DirectionalNavigation="Contained">
                                    <ItemsPresenter />
                                </ScrollViewer>
                            </Border>
                        </Popup>
                    </Grid>

                    <ControlTemplate.Triggers>
                        <Trigger Property="IsEditable" Value="True">
                            <Setter TargetName="ContentSite" Property="Visibility" Value="Hidden" />
                            <Setter TargetName="PART_EditableTextBox" Property="Visibility" Value="Visible" />
                            <Setter TargetName="DropDownToggle" Property="Grid.Column" Value="1" />
                            <Setter TargetName="DropDownToggle" Property="Grid.ColumnSpan" Value="1" />
                        </Trigger>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="Bd" Property="BorderBrush" Value="{StaticResource UiStrokeBrush}" />
                        </Trigger>
                        <Trigger Property="IsKeyboardFocusWithin" Value="True">
                            <Setter TargetName="Bd" Property="BorderBrush" Value="{StaticResource UiGoldBrush}" />
                            <Setter TargetName="ArrowHost" Property="Background" Value="#2C385986" />
                        </Trigger>
                        <Trigger Property="HasItems" Value="False">
                            <Setter TargetName="DropDownBorder" Property="MinHeight" Value="20" />
                        </Trigger>
                        <Trigger Property="IsEnabled" Value="False">
                            <Setter TargetName="Bd" Property="Opacity" Value="0.55" />
                            <Setter Property="Foreground" Value="{StaticResource UiTextMutedBrush}" />
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style x:Key="CompactComboInputStyle" TargetType="ComboBox" BasedOn="{StaticResource ComboInputStyle}">
        <Setter Property="MinHeight" Value="18" />
        <Setter Property="Height" Value="18" />
        <Setter Property="Padding" Value="4,0" />
        <Setter Property="FontSize" Value="10" />
    </Style>

    <!-- DataGrid -->
    <Style x:Key="ModernDataGridStyle" TargetType="DataGrid">
        <Setter Property="Background" Value="{StaticResource UiSurfaceAltBrush}" />
        <Setter Property="Foreground" Value="{StaticResource UiTextPrimaryBrush}" />
        <Setter Property="BorderBrush" Value="{StaticResource UiStrokeSoftBrush}" />
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="RowBackground" Value="{StaticResource UiSurfaceAltBrush}" />
        <Setter Property="AlternatingRowBackground" Value="{StaticResource UiSurfaceBrush}" />
        <Setter Property="HeadersVisibility" Value="Column" />
        <Setter Property="GridLinesVisibility" Value="Horizontal" />
    </Style>

    <!-- Lists -->
    <Style x:Key="ModernListViewItemStyle" TargetType="ListViewItem">
        <Setter Property="Padding" Value="9,6" />
        <Setter Property="Margin" Value="0,0,0,3" />
        <Setter Property="HorizontalContentAlignment" Value="Stretch" />
        <Setter Property="Background" Value="Transparent" />
        <Setter Property="BorderBrush" Value="Transparent" />
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="ListViewItem">
                    <Border x:Name="Bd"
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="5"
                            SnapsToDevicePixels="True">
                        <ContentPresenter VerticalAlignment="Center"
                                          HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}" />
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="Bd" Property="Background" Value="{StaticResource UiSurfaceBrush}" />
                            <Setter TargetName="Bd" Property="BorderBrush" Value="{StaticResource UiStrokeBrush}" />
                        </Trigger>
                        <Trigger Property="IsSelected" Value="True">
                            <Setter TargetName="Bd" Property="Background" Value="{StaticResource UiGoldSoftBrush}" />
                            <Setter TargetName="Bd" Property="BorderBrush" Value="{StaticResource UiGoldBrush}" />
                        </Trigger>
                        <Trigger Property="IsEnabled" Value="False">
                            <Setter TargetName="Bd" Property="Opacity" Value="0.55" />
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style x:Key="ModernListViewStyle" TargetType="ListView">
        <Setter Property="Background" Value="{StaticResource UiSurfaceAltBrush}" />
        <Setter Property="BorderBrush" Value="{StaticResource UiStrokeSoftBrush}" />
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="Foreground" Value="{StaticResource UiTextPrimaryBrush}" />
        <Setter Property="Padding" Value="7" />
        <Setter Property="ItemContainerStyle" Value="{StaticResource ModernListViewItemStyle}" />
        <Setter Property="ScrollViewer.CanContentScroll" Value="True" />
    </Style>
</ResourceDictionary>
